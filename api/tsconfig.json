{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "ts-node": {
    "esm": true
  }
}
